---
import { Image } from "astro:assets";
import Isabella from "../../public/images/Isabella.jpg";
import SunIcon from "./SunIcon.astro";
import MoonIcon from "./MoonIcon.astro";
import HDIcon from "./HDIcon.astro";

// Lettertype - Garamond is voor titels en Rubik voor tekst
const Garamond = "font-serif";
const Rubik = "font-sans";

// Merk kleurencode. Gebruik bg-brand-white in class om toe te passen.
// "brand-white": "#F1F1F1",
// "brand-sage": "#BCBC82",
// "brand-copper": "#C2783F",

const {
  headTitleFeatures,
  titleFeature1,
  descriptionFeature1,
  titleFeature2,
  descriptionFeature2,
  titleFeature3,
  descriptionFeature3,
} = Astro.props;
---

<section class="py-20">
  <div
    class="flex justify-center items-center mb-10 text-4xl font-semibold font-heading"
  >
    <h2 class=`text-4xl`>{headTitleFeatures}</h2>
  </div>
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap -mx-3 -mb-6">
      <div class="w-full md:w-1/2 lg:w-1/3 px-3 mb-6">
        <div class="text-center px-1">
          <!-- Was eerst bg-yellow-400 -->
          <span
            class="flex items-center justify-center mx-auto mb-8 md:mb-12 w-16 h-16 rounded-full bg-gradient-to-r from-brand-orange to-brand-copper"
          >
            <SunIcon />
          </span>
          <div>
            <h3 class=`mb-4 text-2xl font-semibold font-heading `>{titleFeature1}</h3>
            <p class=``>
              {descriptionFeature1}
            </p>
          </div>
        </div>
      </div>
      <div class="w-full md:w-1/2 lg:w-1/3 px-3 mb-6">
        <div class="text-center px-1">
          <span
            class="flex items-center justify-center mx-auto mb-8 md:mb-12 w-16 h-16 rounded-full bg-gradient-to-r from-brand-orange to-brand-copper"
          >
            <MoonIcon />
          </span>
          <div>
            <h3 class=`mb-4 text-2xl font-semibold font-heading `>{titleFeature2}</h3>
            <p class=``>
              {descriptionFeature2}
            </p>
          </div>
        </div>
      </div>
      <div class="w-full md:w-1/2 lg:w-1/3 px-3 mb-6">
        <div class="text-center px-1">
          <span
            class="flex items-center justify-center mx-auto mb-8 md:mb-12 w-16 h-16 rounded-full bg-gradient-to-r from-brand-orange to-brand-copper"
          >
            <HDIcon />
          </span>
          <div>
            <h3 class=`mb-4 text-2xl font-semibold font-heading `>
              {titleFeature3}
            </h3>
            <p class=``>{descriptionFeature3}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
