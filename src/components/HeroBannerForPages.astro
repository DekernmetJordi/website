---
import { Image } from "astro:assets";
import Jordi from "../../public/images/Jordi_coachen_kleiner.jpg";
import JordiMetTabletHumanDesign from "../../public/images/Jordi_over_mij_kleiner.jpg";

// Lettertype - Garamond is voor titels en Rubik voor tekst
const Garamond = "font-serif";
const Rubik = "font-sans";

// Merk kleurencode. Gebruik bg-brand-white in class om toe te passen.
// "brand-white": "#F1F1F1",
// "brand-sage": "#BCBC82",
// "brand-copper": "#C2783F",
// "brand-orange": "#E28F50",

// background: linear-gradient(to right, #3a190c, #8b4b2a, #C2783F, #8b4b2a, #3a190c);

const {
  h1 = "Human Design Reading",
  description = "Kom je echte zelf te weten via een Human Design Reading.",
  cta = "Ik wil een reading plannen",
  image,
  imageAlt,
} = Astro.props;
---

<!-- <style>
  p {
    white-space: pre-line;
  }
</style> --><!-- mb-20 is toegevoegd zodat er een wit strook tussen herobanner en aboutme zit -->
<div class="container px-4 mx-auto pt-12 bg-brand-white mb-10">
  <div class="flex flex-wrap items-center -mx-4">
    <div class="w-full md:w-1/2 px-4 mb-6 md:mb-0">
      <h1 class=`mt-8 mb-6 lg:mb-12 text-5xl lg:text-6xl font-bold ` lang="nl">
        {h1}
      </h1>
      <div class="max-w-lg mb-6 lg:mb-12">
        <p class=`text-xl`>
          {description}
        </p>
      </div>
      <div class="flex flex-wrap">
        <!-- bg-brand-copper hover:bg-brand-sage transition duration-200-->
        <a
          onclick="return gtag_report_conversion('https://calendar.app.google/oHow2Z6mhSpUVwQUA');"
          class=`small-caps CTA-button inline-block px-6 py-4 mb-3 mr-4 leading-normal rounded gradient-btn`
          href="https://calendar.app.google/oHow2Z6mhSpUVwQUA
          "
          >{cta}</a
        >
      </div>
    </div>
    <!-- w-full md:w-1/2 px-4 mb-4 md:mb-0 -->
    <!-- relative rounded-lg -->
    <div class="relative w-full md:w-1/2 px-4">
      <Image
        class="relative rounded-lg h-30 w-auto"
        src={image}
        alt="Jordi de coach die Human Design uitlegt aan een klant"
      />
    </div>
  </div>
</div>
