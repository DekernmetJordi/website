---
import { Image } from "astro:assets";
import Isabella from "../../public/images/Isabella.jpg";
import logo_with_no_background from "../../public/images/Logo_zonder_achtergrond.png";
import Logo from "./Logo.astro";
import DiscordIcon from "./DiscordIcon.astro";
import Privacy_statement from "../../public/images/privacy_statement_14-02-2024.pdf";

// Lettertype - Garamond is voor titels en Rubik voor tekst
const Garamond = "font-serif";
const Rubik = "font-sans";

// Merk kleurencode. Gebruik bg-brand-white in class om toe te passen.
// "brand-white": "#F1F1F1",
// "brand-sage": "#BCBC82",
// "brand-copper": "#C2783F",
---
<section class="py-12 lg:py-20">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap -mx-4">
      <div class="w-full lg:w-1/3 px-4 mb-6 lg:mb-0">
        <a
          class="inline-block mb-5 text-lg font-semibold"
        >
          <Logo>
        </a>
        <p class=`mb-6 max-w-sm text-base`>
          Daadkracht, empathie en tot de kern komen
        </p>
        <div class="flex">
          <a
            class="flex justify-center items-center w-10 h-10 mr-4 bg-gray-50 rounded-full"
            href="#"
          >
          <DiscordIcon/>
          </a>
          <a
            class="flex justify-center items-center w-10 h-10 bg-gray-50 rounded-full"
            href="https://www.linkedin.com/in/jordi-van-ravesteijn" target="_blank"
          >
            <svg
              class="text-gray-500"
              width="12"
              height="12"
              viewbox="0 0 12 12"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
            <title>Linkedin</title>
              <path
                d="M10.8 0H1.2C0.54 0 0 0.54 0 1.2V10.8C0 11.46 0.54 12 1.2 12H10.8C11.46 12 12 11.46 12 10.8V1.2C12 0.54 11.46 0 10.8 0ZM3.6 10.2H1.8V4.8H3.6V10.2ZM2.7 3.78C2.1 3.78 1.62 3.3 1.62 2.7C1.62 2.1 2.1 1.62 2.7 1.62C3.3 1.62 3.78 2.1 3.78 2.7C3.78 3.3 3.3 3.78 2.7 3.78ZM10.2 10.2H8.4V7.02C8.4 6.54002 7.98 6.12 7.5 6.12C7.02 6.12 6.6 6.54002 6.6 7.02V10.2H4.8V4.8H6.6V5.52C6.9 5.04 7.56 4.68 8.1 4.68C9.24 4.68 10.2 5.64 10.2 6.78V10.2Z"
                fill="currentColor"></path>
            </svg>
          </a>
        </div>
      </div>
      <div class="w-full lg:w-2/3 px-4">
        <div class="flex flex-wrap justify-between -mx-4">
          <div class="w-1/2 lg:w-1/4 px-4 mb-8 lg:mb-0">
            <h3 class=`mb-6 text-base font-medium `>Bedrijf</h3>
            <ul class="text-sm">
              <li class="mb-4">
                <a
                  class=`hover:text-neutral-500`
                  href="/over-jordi">Over Jordi</a
