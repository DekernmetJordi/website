                <a
                  class=``>Do: gesloten</a
                >
              </li>
              <li class="mb-4">
                <a
                  class=``>Vr: 09:00 tot 21:00</a
                >
              </li>
              <li class="mb-4">
                <a
                  class=``>Za: 09:00 tot 13:00</a
                >
              </li>
              <li class="mb-4">
                <a
                  class=``>Zo: 09:00 tot 13:00</a
                >
              </li>
            </ul>
          </div>
          <div class="w-1/2 lg:w-1/4 px-4">
            <h3 class=`mb-6 text-base font-medium `>Contact</h3>
            <ul class="text-sm">
              <li class="mb-4">
                <a
                  class=`hover:text-neutral-500`
                  href="mailto:info@dekernmetjordi.com">Mail: info@dekernmetjordi.com</a
                >
              </li>
              <li class="mb-4">
                <a
                  class=``>Kvk: 86884298</a
                >
              </li>
              <li class="mb-4">
                <a
                  class=``>BTW: NL004333911B29</a
                >
              </li>
              <li>
                <a
                  class=`hover:text-neutral-500`
                  href="/contact">Contactpagina</a
                >
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
