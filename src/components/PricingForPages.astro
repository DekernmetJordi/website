---
import { Image } from "astro:assets";
import Isabella from "../../public/images/Isabella.jpg";

import CheckMark from "./CheckMark.astro";

// Lettertype - Garamond is voor titels en Rubik voor tekst
const Garamond = "font-serif";
const Rubik = "font-sans";

// Merk kleurencode. Gebruik bg-brand-white in class om toe te passen.
// "brand-white": "#F1F1F1",
// "brand-sage": "#BCBC82",
// "brand-copper": "#C2783F",
// "brand-orange": "#E28F50",

const {
  titleProduct1,
  descriptionProduct1,
  checkMark1,
  checkMark2,
  checkMark3,
  checkMark4,
  priceProduct1,
  discountProduct1,
  ctaProduct1,

  titleProduct2,
  descriptionProduct2,
  checkMark5,
  checkMark6,
  checkMark7,
  checkMark8,
  priceProduct2,
  discountProduct2,
  ctaProduct2,
} = Astro.props;
---

<style>
  svg {
    /* background-color: black; */
    border-radius: 0.5 rem;
  }
</style>

<section class="relative py-20">
  <div class="container px-4 mx-auto">
    <div class="max-w-3xl mx-auto mb-12 lg:mb-20 text-center"></div>
    <!-- bg-gray-50 -->
    <div class=`mb-6 py-6 px-6 lg:pl-12 lg:pr-6 bg-gray-50 rounded-xl`>
      <div class="flex flex-wrap -mx-4">
        <div class="w-full lg:w-2/3 px-4 mb-4 lg:mb-0">
          <div class="max-w-xl lg:pt-6">
            <div class="max-w-md mb-10">
              <h2 class="text-3xl md:text-4xl font-semibold font-heading">
                {titleProduct1}
              </h2>
            </div>
            <p class="mb-10 text-xl">
              {descriptionProduct1}
            </p>
            <ul class="flex flex-wrap text-left text-base lg:text-lg">
              <li class="w-full lg:w-1/2 mb-6 flex items-center">
                <CheckMark />
                <p class="font-medium">{checkMark1}</p>
              </li>
              <li class="w-full lg:w-1/2 mb-6 flex items-center">
                <CheckMark />
                <p class="font-medium">{checkMark2}</p>
              </li>
              <li class="w-full lg:w-1/2 mb-6 flex items-center">
                <CheckMark />
                <p class="font-medium">{checkMark3}</p>
              </li>
              <li class="w-full lg:w-1/2 mb-6 flex items-center">
                <CheckMark />
                <p class="font-medium">{checkMark4}</p>
              </li>
            </ul>
          </div>
        </div>
        <div class="w-full lg:w-1/3 px-4">
          <div class="bg-white p-12 h-full rounded-xl text-center">
            <!-- <span class="inline-block mb-4 px-3 py-1 bg-red-50 rounded">
              <h3 class="text-xs font-semibold text-red-500">Sale -25%</h3>
            </span> -->
            <p class="mb-6 lg:mb-12">{discountProduct1}</p>
            <div class="flex justify-center mb-12">
              <span class="self-start inline-block mr-1 text-xl font-semibold"
                >€</span
              >
              <p class="self-end text-5xl font-semibold font-heading">
                {priceProduct1}
              </p>
            </div>
            <a
              onclick="return gtag_report_conversion('https://calendar.app.google/oHow2Z6mhSpUVwQUA');"
              class="small-caps block mb-4 py-4 text-sm text-center font-medium leading-normal rounded gradient-btn"
              href="https://calendar.app.google/oHow2Z6mhSpUVwQUA"
              >{ctaProduct1}</a
            >
            <!-- <p class="text-gray-500">Lifetime license</p> -->
          </div>
        </div>
      </div>
    </div>

    <div class="py-6 px-6 lg:pl-12 lg:pr-6 bg-gray-50 rounded-xl">
      <div class="flex flex-wrap -mx-4">
        <div class="w-full lg:w-2/3 px-4 mb-4 lg:mb-0">
          <div class="max-w-xl lg:pt-6">
            <div class="max-w-md mb-10">
              <h2 class="text-3xl md:text-4xl font-semibold font-heading">
                {titleProduct2}
              </h2>
            </div>
            <p class="mb-10 text-xl">
              {descriptionProduct2}
            </p>
            <ul class="flex flex-wrap text-left text-base lg:text-lg">
              <li class="w-full lg:w-1/2 mb-6 flex items-center">
                <CheckMark />
                <p class="font-medium">{checkMark5}</p>
              </li>
              <li class="w-full lg:w-1/2 mb-6 flex items-center">
                <CheckMark />
                <p class="font-medium">{checkMark6}</p>
              </li>
              <li class="w-full lg:w-1/2 mb-6 flex items-center">
                <CheckMark />
                <p class="font-medium">{checkMark7}</p>
              </li>
              <li class="w-full lg:w-1/2 mb-6 flex items-center">
                <CheckMark />
                <p class="font-medium">{checkMark8}</p>
              </li>
            </ul>
          </div>
        </div>
        <div class="w-full lg:w-1/3 px-4">
          <div class="bg-white p-12 h-full rounded-xl text-center">
            <!-- <span class="inline-block mb-4 px-3 py-1 bg-red-50 rounded">
              <h3 class="text-xs font-semibold text-red-500">Sale -50%</h3>
            </span> -->
            <p class="mb-6 lg:mb-12">{discountProduct2}</p>
            <div class="flex justify-center mb-12">
              <span class="self-start inline-block mr-1 text-xl font-semibold"
                >€</span
              >
              <p class="self-end text-5xl font-semibold font-heading">
                {priceProduct2}
              </p>
            </div>
            <a
              onclick="return gtag_report_conversion('https://calendar.app.google/oHow2Z6mhSpUVwQUA');"
              class="small-caps block mb-4 py-4 text-sm text-center font-medium leading-normal rounded gradient-btn"
              href="https://calendar.app.google/oHow2Z6mhSpUVwQUA"
              >{ctaProduct2}</a
            >
            <!-- <p class="text-gray-500">Lifetime license</p> -->
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
