import JordiHumanDesign from "../../public/images/Jordi_van_Ravesteijn_Human_Design_Chart.jpg";
import Tarot from "../../public/images/Tarot_klein.jpg";
import Reiki_met_Alexander from "../../public/images/Reiki_met_Alexander_klein.jpg";

import Layout from "../layouts/Layout.astro";
import Main from "../components/Main.astro";
import Footer from "../components/Footer.astro";

import Section from "../components/Section.astro";
import PaddingTopForPages from "../components/PaddingTopForPages.astro";

// Lettertype - Garamond is voor titels en Rubik voor tekst
const Garamond = "font-serif";
